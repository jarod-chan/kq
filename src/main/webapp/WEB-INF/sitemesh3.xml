<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>

    <!-- 指明满足“/*”的页面，将被“/WEB-INF/decorators/main.jsp”所装饰 -->
    <mapping path="/*" decorator="/WEB-INF/decorators/main.jsp" />


    <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
    <mapping path="/login" exclude="true" />
    
    <mapping path="/css/*" exclude="true"/> 
    <mapping path="/js/*"  exclude="true"/> 
    <mapping path="/plu/*" exclude="true"/> 

</sitemesh>